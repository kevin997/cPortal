// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

// User Model for Authentication
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("sales_agent") // sales_agent, sales_rep, sales_manager
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  students    Student[]
  enrollments Enrollment[]

  @@map("users")
}

// Student Model
model Student {
  id           String   @id @default(cuid())
  fullName     String
  email        String   @unique
  phoneNumber  String
  neighbourhood String?
  address      String?
  dateOfBirth  DateTime?
  gender       String?
  notes        String?  @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdById  String

  // Relations
  createdBy   User         @relation(fields: [createdById], references: [id])
  enrollments Enrollment[]

  @@map("students")
}

// Bootcamp Session Model
model BootcampSession {
  id              String   @id @default(cuid())
  name            String
  description     String?  @db.Text
  startDate       DateTime
  endDate         DateTime
  targetCapacity  Int
  currentCapacity Int      @default(0)
  status          String   @default("upcoming") // upcoming, ongoing, completed, cancelled
  location        String?
  imageUrl        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  enrollments Enrollment[]

  @@map("bootcamp_sessions")
}

// Enrollment Model (Students to Bootcamp Sessions)
model Enrollment {
  id                String   @id @default(cuid())
  studentId         String
  bootcampSessionId String
  enrolledById      String
  enrollmentDate    DateTime @default(now())
  status            String   @default("enrolled") // enrolled, completed, dropped, transferred
  notes             String?  @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  student         Student         @relation(fields: [studentId], references: [id], onDelete: Cascade)
  bootcampSession BootcampSession @relation(fields: [bootcampSessionId], references: [id], onDelete: Cascade)
  enrolledBy      User            @relation(fields: [enrolledById], references: [id])

  @@unique([studentId, bootcampSessionId])
  @@map("enrollments")
}
