// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

// User Model for Authentication
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  phone         String?
  name          String
  password      String
  role          String   @default("sales_agent") // sales_agent, sales_rep, sales_manager, referrer
  avatar        String?
  referralCode  String?  @unique
  walletBalance Int      @default(0) // Accumulated rewards in XAF
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  students    Student[]
  enrollments Enrollment[]
  leads       Lead[] // Leads referred by this user

  @@map("users")
}

// Promotion Model for Referral Campaigns
model Promotion {
  id              String   @id @default(cuid())
  name            String
  description     String?  @db.Text
  rewardAmount    Int // Referrer reward in XAF
  discountPercent Int // Referee discount percentage
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  leads Lead[]

  @@map("promotions")
}

// Lead Model for Referral Tracking
model Lead {
  id          String    @id @default(cuid())
  name        String
  phone       String
  email       String?
  referrerId  String
  promotionId String
  status      String    @default("pending") // pending, contacted, converted, lost
  notes       String?   @db.Text
  convertedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  referrer  User      @relation(fields: [referrerId], references: [id], onDelete: Cascade)
  promotion Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)

  @@map("leads")
}

// Student Model
model Student {
  id            String    @id @default(cuid())
  fullName      String
  email         String    @unique
  phoneNumber   String
  neighbourhood String?
  address       String?
  dateOfBirth   DateTime?
  gender        String?
  notes         String?   @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  createdById   String

  // Relations
  createdBy   User         @relation(fields: [createdById], references: [id])
  enrollments Enrollment[]

  @@map("students")
}

// Bootcamp Session Model
model BootcampSession {
  id              String   @id @default(cuid())
  name            String
  description     String?  @db.Text
  startDate       DateTime
  endDate         DateTime
  targetCapacity  Int
  currentCapacity Int      @default(0)
  status          String   @default("upcoming") // upcoming, ongoing, completed, cancelled
  location        String?
  imageUrl        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  enrollments Enrollment[]

  @@map("bootcamp_sessions")
}

// Enrollment Model (Students to Bootcamp Sessions)
model Enrollment {
  id                String   @id @default(cuid())
  studentId         String
  bootcampSessionId String
  enrolledById      String
  enrollmentDate    DateTime @default(now())
  status            String   @default("enrolled") // enrolled, completed, dropped, transferred
  notes             String?  @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  student         Student         @relation(fields: [studentId], references: [id], onDelete: Cascade)
  bootcampSession BootcampSession @relation(fields: [bootcampSessionId], references: [id], onDelete: Cascade)
  enrolledBy      User            @relation(fields: [enrolledById], references: [id])

  @@unique([studentId, bootcampSessionId])
  @@map("enrollments")
}
